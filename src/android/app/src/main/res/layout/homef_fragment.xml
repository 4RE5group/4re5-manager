<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@+id/linear2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#263345"
		android:layout_weight="1">
		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/swiperefreshlayout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="4re5 apps"
					android:textSize="16sp"
					android:textColor="#798CA3" />
				<GridView
					android:id="@+id/gridview1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:background="#263345"
					android:layout_gravity="center_horizontal"
					android:numColumns="3"
					android:stretchMode="columnWidth" />
			</LinearLayout>
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
		<LinearLayout
			android:id="@+id/sheetlayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#212121"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
			
			app:behavior_peekHeight="60dp">
			<LinearLayout
				android:id="@+id/indicator"
				android:layout_width="40dp"
				android:layout_height="6dp"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="18dp"
				android:padding="8dp"
				android:background="#EEEEEE"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/appicon"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_marginLeft="10dp"
					android:src="@drawable/default_image"
					android:scaleType="fitCenter" />
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/appname"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="5dp"
						android:text="TextView"
						android:textSize="14sp"
						android:textColor="#FFFFFF" />
					<TextView
						android:id="@+id/appdesc"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:text="TextView"
						android:textSize="12sp"
						android:textColor="#FAFAFA" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/appkeywords"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="first release: 1-1-1900"
						android:textSize="12sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/appversion"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="version: 1.0"
						android:textSize="12sp"
						android:textColor="#FFFFFF" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear13"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="right"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="author:"
							android:textSize="12sp"
							android:textColor="#FFFFFF" />
						<TextView
							android:id="@+id/author"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:background="#FF8500"
							android:text="@4re5 group"
							android:textSize="12sp"
							android:textStyle="bold"
							android:textColor="#FFFFFF" />
						<LinearLayout
							android:id="@+id/linear15"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:orientation="vertical"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/github"
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:src="@drawable/github"
							android:scaleType="fitXY" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear12"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="under license: "
							android:textSize="12sp"
							android:textColor="#FFFFFF" />
						<TextView
							android:id="@+id/liscence"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="MIT"
							android:textSize="12sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1" />
					</LinearLayout>
				</LinearLayout>
				<TextView
					android:id="@+id/installbtn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="24dp"
					android:layout_marginTop="24dp"
					android:layout_marginRight="24dp"
					android:layout_marginBottom="12dp"
					android:padding="12dp"
					android:background="#E53935"
					android:gravity="center_horizontal|center_vertical"
					android:text="install"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF" />
				<TextView
					android:id="@+id/uninstallbtn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="24dp"
					android:layout_marginTop="12dp"
					android:layout_marginRight="24dp"
					android:layout_marginBottom="24dp"
					android:padding="12dp"
					android:background="#E53935"
					android:gravity="center_horizontal|center_vertical"
					android:text="uninstall"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF" />
			</LinearLayout>
		</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
